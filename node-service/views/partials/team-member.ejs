<div class="overflow-hidden group bg-card rounded-lg border shadow reveal reveal-up">
  <div class="p-6 flex flex-col items-center text-center">
    <div class="relative w-24 h-24 mb-4 rounded-full overflow-hidden border-4 border-primary transition-transform duration-500 group-hover:scale-110">
      <img src="<%= image %>" alt="<%= name %>" class="object-cover w-full h-full" />
    </div>
    <h3 class="text-xl font-semibold mb-2 text-foreground"><%= name %></h3>
    <p class="text-foreground/60 mb-4"><%= role %></p>
    <a
      href="<%= githubUrl %>"
      class="github-link inline-flex items-center text-foreground/75 hover:text-foreground transition-colors duration-300 group-hover:translate-y-[-2px]"
      target="_blank"
      rel="noopener noreferrer"
    >
